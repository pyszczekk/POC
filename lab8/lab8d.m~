close all;
clearvars;
clc;

img = imread('calculator.bmp');
SE = ones(1, 71);

marker = imerode(img,SE);
mask = img;
imgO=imopen(img,SE)
imgR=imreconstruct(marker,mask)

figure(1)
subplot(4,2,1:2)
imshow(img);
title('oryginal');
subplot(4,2,3);
imshow(imgO)
title('otwarcie');
subplot(4,2,4);
imshow(imgR)
title('rekonstrukcja');
subplot(4,2,5)
imshow(img - imgO);
title('oryginal - otwarcie')
subplot(4,2,6)
imshow(img-imgR);
title('oryginal - rekonstrukcja')
subplot(4,2,7:8)
