close all;
clearvars;
clc;

img = imread('ertka.bmp');
SE = strel('square',3);
imgE=imerode(img,SE);
imgE2=imerode(imgE,SE);
imgE3=imerode(imgE2,SE);
figure(1);
subplot(2,2,1);
imshow(img);
title('oryginal');
subplot(2,2,2);
imshow(imgE);
title("po erozji");
subplot(2,2,3);
imshow(imgE2);
title("erozja x2");
subplot(2,2,4);
imshow(imgE3);
title("erozja x3");

buzka = imread('buzka.bmp');
E = [1,1; 1,1; 1,1]
figure(2)
subplot(1,2,1);
imshow(buzka)
title('oryginal');
subplot(1,2,2);
imshow(imerode(buzka,E));
title('erozja')


figure(3)
subplot(3,2,1:2)
imshow(img);
title('original');
subplot(3,2,3);
imshow(imerode(img,SE));
title('erozja');
subplot(3,2,4);
imshow(imdilate(img,SE));
title('dylatacja');
subplot(3,2,5);
imshow(imopen(img,SE));
title('otwarcie');
